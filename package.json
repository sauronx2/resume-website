{
  "name": "resume-website",
  "version": "1.0.0",
  "description": "Personal resume website for Oleksandr Serhadov - Senior QA Automation Engineer",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run css:watch\" \"npm run serve\"",
    "serve": "node server.js",
    "css:build": "tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --minify",
    "css:watch": "tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --watch",
    "build": "npm run css:build",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "resume",
    "portfolio",
    "qa-automation",
    "tailwindcss"
  ],
  "author": "Oleksandr Serhadov",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.22",
    "express": "^5.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
